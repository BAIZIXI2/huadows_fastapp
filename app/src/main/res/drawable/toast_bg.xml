<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 背景色：黑色 80% 透明度 -->
    <solid android:color="#CC000000" />

    <!-- 圆角半径 -->
    <corners android:radius="8dp" />

    <!-- 可选：边框，深灰色 -->
    <stroke
        android:width="1dp"
        android:color="#444444" />

    <!-- 可选：内边距（如果想让内容不贴边） -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
